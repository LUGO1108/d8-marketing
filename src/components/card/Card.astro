---
interface Props {
  title: string;
  description: string;
  icons: string;
  alt: string;
}
const { title, description, icons, alt } = Astro.props;
---

<div class="flex flex-col p-3 rounded-md items-center">
  <img class="w-[32px]" src={icons} alt={alt} />

  <h3 class="font-primarioOswald text-2xl text-green-menta-400 py-2 capitalize">
    {title}
  </h3>
  <p class="text-lg font-cecundarioRoboto text-azure-radiance-200 px-4 text-center">
    {description}
  </p>
</div>
